{
    "server-url": "http://www.colorsearch.a3c1.starter-us-west-1.openshiftapps.com",
    "login-required": true,
    "user": "admin",
    "password": "hello",
    "hosting": true,
    "imgs-path": "imgs/public", 
    "text-translator":{
        "enabled": true,
        "services": ["GoogleService"]
    },
    "image-tagger":{
        "enabled": false,
        "similarity-threshold": 20,
        "services": ["ClarifaiService"]
    },
    "image-loader":{
        "enabled": false,
        "sleep-time": 86400000,
        "time-gap": 5000,
        "sleep-if-tagging-failed": true,
        "sleep-if-translation-failed": true,
        "directory-source":{
            "enabled": false,
            "step": 1,
            "path": "imgs"
        },
        "flickr-source":{
            "enabled": false,
            "step" : 1,
            "word-lists": ["en-US.txt", "de-DE.txt"],
            "randomization": 0.5
        }
    },
    "image-finder":{
        "similarity-threshold": 85,
        "default-distance": "Euclidean"
    },
    "index":{
        "enabled": false,
        "delta": 0.1,
        "L": "auto",
        "k": 4,
        "w": 0.4,
        "family": "EuclideanHashFamily"
    }
}